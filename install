#!/bin/sh

[ -z "$DOTFILESDIR" ] && DOTFILESDIR=${HOME}/dotfiles

FILES="
alsoftrc
bash_aliases
bash_login
bashrc
emacs
gdbinit
gitconfig
gitignore
inputrc
irssi/config
irssi/scripts/nickcolor.pl
mergemasterrc
mutt/gpg.rc
muttrc
rtorrent.rc
screenrc
signature
ssh/config
subversion/config
tarsnaprc
tmux.conf
vim
vimrc
xinitrc
Xresources
"

usage()
{
    cat >&2 <<__EOF__
Usage: $(basename ${0}) [ -f ]

Options:
  -f            -- Force existing files to be overwritten.
__EOF__
    exit ${1-1}
}

if [ $# -gt 1 ] || [ $# -eq 1 -a "$1" != '-f' ]; then
    usage
fi

for file in ${FILES}; do
    if expr $file : '[a-zA-Z][a-zA-Z]*/' >/dev/null 2>&1; then
        mkdir -p ${HOME}/.${file%/*}
    fi
    case $file in
    muttrc)
        mkdir -p ${HOME}/.mutt/cache
        ;;
    esac
    target=${HOME}/.${file}
    if [ -e $target -a ! -L $target ]; then
        echo "$target exists and isn't a symlink" >&2
        continue
    fi
    ln -s $1 ${DOTFILESDIR}/$file ${HOME}/.$file
done

mkdir -p ${HOME}/.config/nvim
ln -s $1 ${DOTFILESDIR}/vimrc ${HOME}/.config/nvim/init.vim
